-# -*- coding: utf-8 -*-
%p パスワードを変更します。二つの欄に同じパスワードを入力してください。
%ul#profile_info
  %li
    =f.label :password, :caption => 'パスワード'
    =f.error_message_on :password
    =f.password_field :password, :value => ''
  %li
    =f.label :password_confirmation, :caption => 'パスワード再入力'
    =f.error_message_on :password_confirmation
    =f.password_field :password_confirmation, :value => ''
#op_panel
  %ul
    %li= f.submit '保存', :class => :button
    %li= f.submit 'キャンセル', :onclick => "window.location='#{url(:profiles, :show, :id => @account.id)}';return false", :class => :button
