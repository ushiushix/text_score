%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:songs, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:songs, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:songs, :edit, :id => @song.id)

.tabs-content
  = form_for :song, url(:songs, :update, :id => @song.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'songs/form', :locals => { :f => f }
